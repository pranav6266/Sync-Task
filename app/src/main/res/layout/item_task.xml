<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Task Title (Main Info) -->
        <TextView
            android:id="@+id/tv_task_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="?attr/colorOnSurface"
            tools:text="Buy Groceries" />

        <!-- Task Scope/Variant Icon (Individual, Shared, Assigned) -->
        <ImageView
            android:id="@+id/iv_task_scope"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:contentDescription="Task Scope"
            app:tint="?attr/colorOnSurfaceVariant"
            tools:src="@drawable/ic_scope_shared" />

        <!-- Task Type Icon (Task, Reminder, Update) -->
        <ImageView
            android:id="@+id/iv_task_type"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:contentDescription="@string/task_type_icon_desc"
            app:tint="?attr/colorOnSurfaceVariant"
            tools:src="@drawable/ic_task_type_task" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
